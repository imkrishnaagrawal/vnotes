{
  "name": "vnote",
  "author": {
    "name": "Krishna Agrawal",
    "email": "imkrishnaagrawal@gmail.com"
  },
  "publisher": "KrishnaAgrawal",
  "funding": [
    {
      "type": "patreon",
      "url": "https://www.patreon.com/imkrishnaagrawal"
    }
  ],
  "displayName": "vnote",
  "description": "Notes application",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.89.0"
  },
  "keywords": [
    "vnote",
    "vnote",
    "notes",
    "markdown",
    "asciidoc"
  ],
  "categories": [
    "Other"
  ],
  "icon": "resources/notes-icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/imkrishnaagrawal/vnote"
  },
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Configuration",
      "properties": {
        "vnote.notesLocation": {
          "type": "string",
          "default": "~/vnote",
          "description": "folder location for notes."
        },
        "vnote.notesDefaultExtension": {
          "type": "string",
          "default": "md",
          "description": "extension type for notes."
        },
        "vnote.openPreview": {
          "type": "boolean",
          "default": false,
          "description": "auto preview file when clicked."
        },
        "vnote.ignoredExtensions": {
          "type": "string",
          "description": "extension to ignore in explorer"
        }
      }
    },
    "commands": [
      {
        "command": "extension.newNote",
        "title": "New Note File",
        "icon": {
          "light": "resources/light/add.svg",
          "dark": "resources/dark/add.svg"
        }
      },
      {
        "command": "extension.renameNote",
        "title": "Rename Note File",
        "icon": {
          "light": "resources/light/rename.svg",
          "dark": "resources/dark/rename.svg"
        }
      },
      {
        "command": "extension.deleteNote",
        "title": "Delete Note File",
        "icon": {
          "light": "resources/light/delete.svg",
          "dark": "resources/dark/delete.svg"
        }
      },
      {
        "command": "extension.openNote",
        "title": "Open Note File"
      },
      {
        "command": "extension.refreshNotes",
        "title": "Refresh Notes",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      }
    ],
    "keybindings": [
      {
        "command": "extension.listNotes",
        "key": "alt+l",
        "mac": "alt+l"
      },
      {
        "command": "extension.newNote",
        "key": "alt+n",
        "mac": "alt+n"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "extension.refreshNotes",
          "when": "view == notesView",
          "group": "navigation@1"
        },
        {
          "command": "extension.newNote",
          "when": "view == notesView",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "extension.renameNote",
          "when": "view == notesView && viewItem == note",
          "group": "inline@1"
        },
        {
          "command": "extension.deleteNote",
          "when": "view == notesView && viewItem == note",
          "group": "inline@2"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "notesContainer",
          "title": "Notes",
          "icon": "resources/notes-icon.svg"
        }
      ]
    },
    "views": {
      "notesContainer": [
        {
          "id": "notesView",
          "name": "Global"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "fs-extra": "^11.2.0"
  }
}

