{
	"name": "notes",
	"displayName": "notes",
	"description": "you can take notes",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.52.0"
	},
	"keywords": [
		"notes"
	],
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:notesView",
		"onCommand:vnotes.deleteNote",
		"onCommand:vnotes.listNotes",
		"onCommand:vnotes.newNote",
		"onCommand:vnotes.refreshNotes",
		"onCommand:vnotes.renameNote",
		"onCommand:vnotes.setupNotes",
		"onCommand:vnotes.openFile"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Configuration",
			"properties": {
				"notes.notesLocation": {
					"type": "string",
					"default": "",
					"description": "folder location for notes."
				}
			}
		},
		"commands": [
			{
				"command": "vnotes.openFile",
				"title": "Open Notes"
			},
			{
				"command": "vnotes.deleteNote",
				"title": "Delete Note",
				"icon": {
					"light": "resources/light/delete.svg",
					"dark": "resources/dark/delete.svg"
				}
			},
			{
				"command": "vnotes.listNotes",
				"title": "List Notes",
				"category": "Notes"
			},
			{
				"command": "vnotes.newNote",
				"title": "New Note",
				"category": "Notes",
				"icon": {
					"light": "resources/light/add.svg",
					"dark": "resources/dark/add.svg"
				}
			},
			{
				"command": "vnotes.refreshNotes",
				"title": "Refresh Notes",
				"category": "Notes",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "vnotes.renameNote",
				"title": "Rename Note",
				"icon": {
					"light": "resources/light/rename.svg",
					"dark": "resources/dark/rename.svg"
				}
			},
			{
				"command": "vnotes.setupNotes",
				"title": "Select notes storage location.",
				"category": "Notes"
			}
		],
		"keybindings": [
			{
				"command": "vnotes.listNotes",
				"key": "alt+l",
				"mac": "alt+l"
			},
			{
				"command": "vnotes.newNote",
				"key": "alt+n",
				"mac": "alt+n"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "vnotes.refreshNotes",
					"when": "view == notesView",
					"group": "navigation@1"
				},
				{
					"command": "vnotes.newNote",
					"when": "view == notesView",
					"group": "navigation@2"
				}
			],
			"view/item/context": [
				{
					"command": "vnotes.renameNote",
					"when": "view == notesView && viewItem == note",
					"group": "inline@1"
				},
				{
					"command": "vnotes.deleteNote",
					"when": "view == notesView && viewItem == note",
					"group": "inline@2"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "notesContainer",
					"title": "Notes",
					"icon":  "resources/notes-icon.svg"

				}
			]
		},
		"views": {
			"notesContainer": [
				{
					"id": "notesView",
					"name": "Global"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack --config ./build/node-extension.webpack.config.js",
		"watch": "webpack --watch --config ./build/node-extension.webpack.config.js",
		"package": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "yarn run test-compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/rimraf": "^3.0.0",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"ts-loader": "^8.0.11",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1",
		"webpack": "^5.10.0",
		"webpack-cli": "^4.2.0"
	},
	"dependencies": {
		"@types/mkdirp": "^1.0.1"
	}
}
